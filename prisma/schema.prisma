// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  LANDLORD
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  password      String
  role          Role      @default(LANDLORD)
  listings      Listing[]
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at        Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Listing {
  id          String   @id @default(cuid())
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  title       String
  slug        String   @unique
  description String   @db.Text
  pricePerDay Int
  seats       Int
  beds        Int
  location    String
  lat         Float?
  lng         Float?
  features    String[]
  images      Image[]
  inquiries   Inquiry[]
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([published])
  @@index([location])
  @@index([lat, lng])
}

model Image {
  id        String   @id @default(cuid())
  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  url       String
  alt       String?
  createdAt DateTime @default(now())

  @@index([listingId])
}

model Inquiry {
  id           String    @id @default(cuid())
  listingId   String
  listing      Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  renterName   String
  renterEmail  String
  message      String   @db.Text
  startDate    DateTime?
  endDate      DateTime?
  status       String   @default("OPEN") // OPEN|ANSWERED|ARCHIVED
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([listingId])
  @@index([status])
}

model GlossaryTerm {
  id        String   @id @default(cuid())
  term      String   @unique
  slug      String   @unique
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
}

model Article {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  excerpt   String?  @db.Text
  content   String   @db.Text
  tags      String[]
  categories String[]
  featuredImageUrl String?
  legacyUrl String?
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@index([published])
}

model Redirect {
  id        String   @id @default(cuid())
  fromPath  String   @unique
  toPath    String
  createdAt DateTime @default(now())
}
